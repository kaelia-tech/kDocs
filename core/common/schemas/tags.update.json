{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "http://www.kalisio.xyz/schemas/tags.update.json#",
  "title": "schemas.OBJECT_NAME",
  "description": "Tag edition schema",
  "type": "object",
  "properties": {
    "value": {
      "type": "string", 
      "maxLength": 128,
      "minLength": 3,
      "field": {
        "component": "form/KTextField",
        "helper": "schemas.TAGS_NAME_FIELD_HELPER"
      }
    },
    "icon": {
      "type": "object", 
      "default": { "name": "", "color": "" },
      "field": {
        "component": "form/KIconField",
        "helper": "schemas.TAGS_ICON_FIELD_HELPER"
      }
    }
  },
  "required": ["value"]
}

