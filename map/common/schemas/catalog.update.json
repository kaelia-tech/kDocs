{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "http://www.kalisio.xyz/schemas/catalog.update.json#",
  "title": "schemas.OBJECT_NAME",
  "description": "Catalog edition schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string", 
      "maxLength": 128,
      "minLength": 3,
      "field": {
        "component": "form/KTextField",
        "label": "schemas.CATALOG_NAME_FIELD_LABEL"
      }
    },
    "description": {
      "type": "string", 
      "maxLength": 256,
      "field": {
        "component": "form/KTextField",
        "label": "schemas.CATALOG_DESCRIPTION_FIELD_LABEL"
      }
    },
    "featureId": {
      "type": "string", 
      "maxLength": 256,
      "minLength": 1,
      "field": {
        "component": "form/KTextField",
        "label": "schemas.CATALOG_FEATURE_ID_FIELD_LABEL"
      }
    },
    "schema": { 
      "type": "object",
      "field": {
        "component": "form/KFileField",
        "label": "schemas.CATALOG_SCHEMA_FIELD_LABEL",
        "mimeTypes": "application/json"
      }
    }
  },
  "required": ["name", "featureId"]
}

